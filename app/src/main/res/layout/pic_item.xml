<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rr"
    android:background="#ffffff">
<TextView
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/ib_like"
    android:background="#010101" />
    <ImageView
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:id="@+id/iv_main"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image_border"/>

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:id="@+id/ib_like"
        android:layout_below="@+id/iv_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:clickable="true"
        android:tag="unclicked"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/like"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_like_count"
        android:textColor="#12ff00"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/ib_like"
        android:layout_toRightOf="@+id/ib_like"
        android:layout_toEndOf="@+id/ib_like" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:id="@+id/ib_dislike"
        android:layout_alignTop="@+id/ib_like"
        android:focusable="false"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:tag="unclicked"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/dislike"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_dislike_count"
        android:textColor="#ff0007"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/tv_like_count"
        android:layout_toLeftOf="@+id/ib_dislike"
        android:layout_toStartOf="@+id/ib_dislike" />
</RelativeLayout>